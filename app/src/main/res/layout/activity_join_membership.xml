<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hs.dgsw.android.check.LoginActivity"
    android:orientation="vertical"
    android:background="#E6E6E6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check in"
        android:textSize="36dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#000" />

    <View
        android:layout_width="300dp"
        android:layout_height="4px"
        android:background="#01055D"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학변"
        android:textColor="#010565"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/classNumber"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="number"
        android:hint="ex) xxxx"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#B9B9B9"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/joinMemberBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#000120"
        android:text="회원가입"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        />

</LinearLayout>